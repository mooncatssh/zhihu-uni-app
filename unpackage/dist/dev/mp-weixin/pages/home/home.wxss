.active {
  position: relative;
}
.active::after {
  content: "";
  position: absolute;
  width: 90rpx;
  height: 8rpx;
  border-radius: 30px;
  background-color: #2D99F5;
  top: 45px;
  left: -4px;
  right: 0px;
  bottom: 0px;
  margin: auto;
}
