  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20px;
  width: 70%;
  height: 35px;
  border-radius: 25px;
  background-color: #e8e8e8;
}
.my-search-contaner .my-search .my-search-box1 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-search-contaner .my-search .my-search-box1 text {
  font-size: 15px;
  color: #808080;
}
.my-search-contaner .content {
  height: 40px;
